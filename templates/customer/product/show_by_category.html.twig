{% extends 'base.html.twig' %}

{% block body %}

<div class="container py-5">
 
    
  <section>
    <div class="row">
      <div class="col-12">
          <h3 class="text-center">{{ category.name }}</h3>
      </div>

        {% for product in category.products %}

                    <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                        <div class="card">
                        
                            <img src="{{ product.imagepath }}" class="card-img-top imageCard" alt="image_category">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p>{{ product.price | priceEuro }}</p>
                                <a href="#" class="btn btn-primary w-100">Consulter</a>
                            </div>
                        
                        
                        </div>
                    </div>
                {% endfor %}
      
      </div>
  </section>
</div>

{% endblock %}
